  "main": "index.js",
  "scripts": {
    "start": "node ./bin/start",
    "start:hugo": "hugo server --watch --buildDrafts --buildFuture --minify --enableGitInfo --cleanDestinationDir --destination public",
    "start:search": "pagefind --source public --serve",
    "start:api": "swa start public --api-location api -D http://localhost:1313",
    "build": "run-s build:tailwind build:hugo build:search",
    "build:tailwind": "tailwindcss -i ./assets/tailwind.css -o ./assets/base.css",
    "build:hugo": "hugo --enableGitInfo --minify --cleanDestinationDir",
    "build:search": "pagefind --source public"
  },
