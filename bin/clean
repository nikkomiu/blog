#!/usr/bin/env node

const { promises: fs } = require('fs');
const colors = require('colors');
const { generatedContent } = require('../package.json');

async function deleteProjectFileExists(dirPath) {
  try {
    await fs.rm(dirPath, { recursive: true });
  } catch (err) {
    if (err.code !== 'ENOENT') {
      throw err;
    }
  }
}

async function main() {
  const deletePromises = generatedContent.map(deleteProjectFileExists);

  await Promise.all(deletePromises);
}

main().catch(err => {
  console.error(colors.red(err));
  process.exit(1);
});
